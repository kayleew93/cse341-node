<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h1 class="centered">Password Reset</h1>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/reset" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" name="email" id="email">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Reset Password</button>
        </form>
        <!-- MY CODE -->
        <% if (messageReset) { %>
            <div class="centered">
                <p>Thank you. Please check your email for password reset instructions.</p>
            
                <br><br><br>
                <h2>Email:</h2>
                <p>"<%= user.email %>," you requested a password reset.</p>
        <p>Click this <a class="a__link" href="/reset/<%= user.resetToken %>">link</a> to set a new password.</p>
        </div>
        <% } %>
        <!-- MY CODE -->
    </main>
<%- include('../includes/end.ejs') %>